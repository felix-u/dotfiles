[module/bspwm]
type = internal/bspwm
enable-click = true
enable-scroll = true

label-focused = %name%
label-focused-foreground = ${colours.xcolor15}
label-focused-padding = 2
label-focused-underline = ${colours.xcolor8}
label-focused-background = ${vars.dskbg}

label-occupied = %name%
label-occupied-foreground = ${colours.xcolor7}
label-occupied-padding = 2
label-occupied-background = ${vars.dskbg}

label-urgent = %name%
label-urgent-foreground = ${colours.xcolor1}
label-urgent-padding = 2
label-urgent-background = ${vars.dskbg}

label-empty = %name%
label-empty-foreground = ${colours.xcolor8}
label-empty-padding = 2
label-empty-background = ${vars.dskbg}

[module/cpuicon]
type = custom/text
content = %{T2} %{T-}
content-foreground = ${vars.cpufg}
content-background = ${vars.cpubg}
content-padding = 1
[module/cpu]
type = internal/cpu
format = <label>
format-foreground = ${vars.cpufg}
format-background = ${vars.cpubg}
format-padding = 0
label = %percentage%%

[module/tempicon]
