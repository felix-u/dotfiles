[module/volume]
type = internal/pulseaudio
format-volume = <label-volume> <bar-volume>
format-volume-foreground = ${colours.xcolor4}
label-volume = "奄"
label-muted = "ﱝ  "
format-muted = <label-muted> <bar-volume>
format-muted-foreground = ${colours.xcolor1}

format-muted-padding = 2

bar-volume-width = 10
bar-volume-foreground-0 = ${colours.xcolor4}
bar-volume-gradient = false
bar-volume-indicator =
bar-volume-fill = ━
bar-volume-empty = ━
bar-volume-empty-foreground = ${colours.xcolor8}
format-volume-padding = 2

[module/network]
type = internal/network
interface = wlan0
format-connected = <label-connected>
format-connected-foreground = ${vars.netfg}
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colours.xcolor1}
label-connected = 直
label-disconnected = 睊

[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/scripts/bluetooth.sh
interval = 1
click-left = blueberry
click-middle = blueman-manager
format-padding = 4
format-foreground = ${colours.xcolor15}
click-right = exec ~/.config/polybar/scripts/toggle_bluetooth.sh


