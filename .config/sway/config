# key repeat rate
input type:keyboard {
    repeat_delay 200
    repeat_rate 50
}

# touchpad settings
input "1739:52824:SYNA8008:00_06CB:CE58_Touchpad" {
    natural_scroll enabled
    scroll_method two_finger
    click_method clickfinger
    dwt enabled # disable while typing
    tap enabled
    # middle_emulation enabled
}

# compose key
input type:keyboard {
    xkb_options compose:caps
}

# mouse settings
input "5426:101:Razer_Razer_Basilisk_Essential" {
    accel_profile flat
}
# input "1133:16514:Logitech_MX_Master_3" {
input "1133:50504:Logitech_USB_Receiver_Mouse" {
    accel_profile flat
    natural_scroll enabled
}

### Output configuration
#
# hide that bloody thing away
seat * hide_cursor 10000
seat * hide_cursor when-typing enable

#
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Idle configuration
#
# Example configuration:
#
# exec swayidle -w \
#          timeout 300 'swaylock -f -c 000000' \
#          timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

# smart_gaps on
# hide_edge_borders smart
smart_gaps off
hide_edge_borders none
focus_follows_mouse no

include /etc/sway/config.d/*

# cursor
exec_always gsettings set org.gnome.desktop.interface cursor-theme Adwaita
exec_always gsettings set org.gnome.desktop.interface cursor-size 24
# set icons
exec_always gsettings set org.gnome.desktop.interface icon-theme 'Adwaita'

# bash scripting, babyyy
exec_always --no-startup-id ~/.config/sway/start.sh

# ZOOM ---
# Inhibit idle when zoom window is visible
for_window [app_id="zoom"] inhibit_idle visible
# Center zoom toolbar when screensharing
for_window [app_id="zoom" title="as_toolbar"] {
  floating enable
  move position 50ppt 0
  move left 402
}
# Fix Zoom notifications
# Float any zoom window by default but specific ones
for_window [app_id="zoom"] floating enable
for_window [app_id="zoom" title="(Account|Chat|Meeting|Participants)"] floating disable
for_window [title=".*"] saturation set 0
# --------

bar  {
    id std
}
