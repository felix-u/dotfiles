border-top-color = ${colours.xbackground}
border-bottom-size = 8
border-bottom-color = ${colours.xbackground}

padding-left = 4
padding-right = 2
module-margin-left = 0
module-margin-right = 0

font-0 = Fira Sans:size=12:antialias=true;4
font-1 = Iosevka Nerd Font:size=15:antialias=true;5
font-2 = Iosevka Nerd Font:size=12:antialias=true;4
font-3 = Iosevka Nerd Font:size=10:antialias=true;1

tray-position = none
tray-maxsize = 30

modules-left = rl bspwm rr    spc      rlcpu cpuicon cpu rrcpu        spc       rltemp tempicon tempdesktop rrtemp
modules-center = polywins
modules-right = volume rltime timeicon time rrtime  spc   rldate dateicon date rrdate  spc  networkdesktop bluetooth

[module/networkdesktop]
type = internal/network
interface = wlp3s0
format-connected = <label-connected>
format-connected-foreground = ${vars.netfg}
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colours.xcolor1}
label-connected = 直
label-disconnected = 睊

[module/tempdesktop]
type = internal/temperature
format-foreground = ${vars.tempfg}
format-background = ${vars.tempbg}
format-padding = 1
thermal-zone = 1
;hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
format = <label>
label = %temperature-c%

