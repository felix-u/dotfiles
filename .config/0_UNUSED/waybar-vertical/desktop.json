{
    "layer": "top",
    "position": "left",
    "modules-left": ["sway/workspaces", "sway/mode", "cpu"],
    "modules-center": ["custom/date1", "custom/date2", "custom/time1", "custom/time2"],
    "modules-right": ["pulseaudio", "network"],

    "sway/window": {
        "max-length": 50
    },

    "cpu": {
        "interval": 2,
        "format": "   {usage}%",
        "max-length": 10,
        "states": {
            "warning": 50,
            "critical": 75
        }
    },

    "battery": {
        "format": "{icon}  {capacity}%",
        "format-charging": "  {capacity}%",
        "format-icons": ["",
            "", "", "", "", "",
            "", "", "", "", ""],
        "states": {
            "warning": 35,
            "critical": 15
        },
    },

    "network": {
        "interface": "wlp3s0",
        "format": "直",
        "format-disconnected": "睊",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
    },

    "custom/date1": {
        "exec": "~/.config/waybar/scripts/date1",
        "restart-interval": 60,
        "tooltip": false,
    },

    "custom/date2": {
        "exec": "~/.config/waybar/scripts/date2",
        "restart-interval": 60,
        "tooltip": false,
    },

    "custom/time1": {
        "exec": "~/.config/waybar/scripts/time1",
        "restart-interval": 60,
        "tooltip": false,
    },

    "custom/time2": {
        "exec": "~/.config/waybar/scripts/time2",
        "restart-interval": 60,
        "tooltip": false,
    },

    "pulseaudio": {
        "format": "{icon}   {volume}%",
        "format-icons": {
            "headphone": ["  ", "  ", "  ", "  "],
            "default":   ["", "", "", ""],
            "bluetooth": [" ", " ", " ", " "],
        },
        "format-muted": "   {volume}%"
    },
}
