[bar/laptop]
fixed-center = true
height = 50
bottom = false
dpi = 192
wm-restack = bspwm

background = ${colours.xbackground}
foreground = ${colours.xforeground}
line-size = 4
line-color = ${colours.xcolor4}

border-top-size = 13
border-top-color = ${colours.xbackground}
border-bottom-size = 13
border-bottom-color = ${colours.xbackground}

padding-left = 4
padding-right = 2
module-margin-left = 0
module-margin-right = 0

font-0 = Fira Sans:size=12:antialias=true;5
font-1 = Iosevka Nerd Font:size=15:antialias=true;7
font-2 = Iosevka Nerd Font:size=12:antialias=true;5
font-3 = Iosevka Nerd Font:size=10:antialias=true;1

tray-position = none
tray-maxsize = 30

modules-left = rl bspwm rr    spc      rlcpu cpuicon cpu rrcpu        spc       rltemp tempicon temp rrtemp
modules-center = polywins
modules-right = volume rltime timeicon time rrtime  spc   rldate dateicon date rrdate  spc    rlbat battery rrbat   spc    network bluetooth

[module/rl]
