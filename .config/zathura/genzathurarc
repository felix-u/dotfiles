set guioptions s
set selection-clipboard clipboard
set font                        "$FONT_SANS Bold 12"

set notification-error-fg       "#$CLR_01" #red
set notification-warning-fg     "#$CLR_03" #yellow
set notification-fg             "#$CLR_02" #green
set inputbar-fg                 "#$CLR_12" #bright-blue
set highlight-color             "#$CLR_03" #yellow
set highlight-active-color      "#$CLR_04" #blue

set render-loading              true
set recolor                     "false"
# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue             "false"


# dark theme by default
set notification-error-bg       "#$CLR_BG" #lightbg
set notification-warning-bg     "#$CLR_BG" #lightbg
set notification-bg             "#$CLR_BG" #backgound

set completion-bg               "#$CLR_00" #colour0
set completion-fg               "#$CLR_15" #lightfg-dim
set completion-group-bg         "#$CLR_00" #colour0
set completion-group-fg         "#$CLR_15" #lightfg-dim
set completion-highlight-bg     "#$CLR_08" #bright black
set completion-highlight-fg     "#$CLR_15" #lightfg-dim

set index-bg                    "#$CLR_BG" #lightbg
set index-fg                    "#$CLR_15" #lightfg-dim
set index-active-bg             "#$CLR_08" #colour8
set index-active-fg             "#$CLR_15" #lightfg-dim

set inputbar-bg                 "#$CLR_00" #lightbg
set statusbar-bg                "#$CLR_00" #lightbg
set statusbar-fg                "#$CLR_15" #lightfg-dim

set default-bg                  "#$CLR_BG" #lightbg
set default-fg                  "#$CLR_FG" #lightfg
set render-loading-bg           "#$CLR_BG" #lightbg
set render-loading-fg           "#$CLR_FG" #lightfg

set recolor-lightcolor          "#$CLR_BG" #lightbg
set recolor-darkcolor           "#$CLR_FG" #lightfg


# light theme binding (press 1)
map '1' feedkeys ":set statusbar-bg '#$CLR_00'<Return>3"
map '3' feedkeys ":set statusbar-fg '#$CLR_FG'<Return>4"
map '4' feedkeys ":set default-bg '#$CLR_BG'<Return>5"
map '5' feedkeys ":set default-fg '#$CLR_FG'<Return>6"
map '6' feedkeys ":set render-loading-bg '#$CLR_BG'<Return>7"
map '7' feedkeys ":set render-loading-fg '#$CLR_FG'<Return>8"
map '8' feedkeys ":set recolor-lightcolor '#$CLR_BG'<Return>9"
map '9' feedkeys ":set recolor-darkcolor '#$CLR_FG'<Return>"

# dark theme binding (press 2)
map '2' feedkeys ":set statusbar-bg '#$CLR_00_ALT'<Return>0"
map '0' feedkeys ":set statusbar-fg '#$CLR_15_ALT'<Return>w"
map 'w' feedkeys ":set default-bg '#$CLR_BG_ALT'<Return>f"
map 'f' feedkeys ":set default-fg '#$CLR_FG_ALT'<Return>p"
map 'p' feedkeys ":set render-loading-bg '#$CLR_BG_ALT'<Return>b"
map 'b' feedkeys ":set render-loading-fg '#$CLR_FG_ALT'<Return>u"
map 'u' feedkeys ":set recolor-lightcolor '#$CLR_BG_ALT'<Return>y"
map 'y' feedkeys ":set recolor-darkcolor '#$CLR_FG_ALT'<Return>"


# vim:ft=sh
