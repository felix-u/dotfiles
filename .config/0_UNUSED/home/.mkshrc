#!/usr/bin/env mksh
# shellcheck shell=ksh

HISTFILE="$XDG_CACHE_HOME"/.mksh_history
HISTSIZE=10000

set -o emacs

bind "^[[A"=up-history
bind "^[[B"=down-history
bind "^[[C"=forward-char
bind "^[[D"=backward-char

# PS1=$'\[\e[1;36m\]\w\n\[\e[1;34m\]λ \[\e[0m\]'
PS1="$(echo -e "\e[1;36m\${PWD##*/}\n\e[1;34mλ \e[0m")"
