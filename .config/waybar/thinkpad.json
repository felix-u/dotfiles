{
  "layer": "top",
  "modules-left": [
    "wlr/workspaces",
    "cpu"
  ],
  "modules-right": [
    "pulseaudio",
    "battery",
    "custom/clock"
  ],
  "wlr/workspaces": {
    "format": "{icon}",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "on-click": "activate",
    "sort-by-number": true
  },
  "cpu": {
    "interval": 2,
    "format": "   {usage}%",
    "max-length": 10,
    "states": {
      "warning": 50,
      "critical": 75
    }
  },
  "battery": {
    "format": "{icon}  {capacity}%",
    "bat": "BAT0",
    "format-charging": "  {capacity}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "states": {
      "warning": 35,
      "critical": 15
    }
  },
  "custom/clock": {
    "exec": "~/.config/waybar/scripts/date",
    "restart-interval": 5,
    "tooltip": false
  },
  "custom/battery": {
    "exec": "~/.config/waybar/scripts/battery",
    "restart-interval": "5",
    "tooltip": "false"
  },
  "pulseaudio": {
    "format": "{icon}   {volume}%",
    "format-icons": {
      "headphone": [
        " ",
        " ",
        " ",
        " "
      ],
      "default": [
        "",
        "",
        "",
        ""
      ],
      "bluetooth": [
        " ",
        " ",
        " ",
        " "
      ]
    },
    "format-muted": "   {volume}%"
  }
}
