set guioptions ""
set selection-clipboard clipboard
set font                        "$(wq fontmono) Bold 12"

set notification-error-fg       "$(wq color1)" #red
set notification-warning-fg     "$(wq color3)" #yellow
set notification-fg             "$(wq color2)" #green
set inputbar-fg                 "$(wq color12)" #bright-blue
set highlight-color             "$(wq color3)" #yellow
set highlight-active-color      "$(wq color4)" #blue

set render-loading              true
set recolor                     "true"
# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue             "true"


# dark theme by default
set notification-error-bg       "$(wq lightbg)" #background
set notification-warning-bg     "$(wq lightbg)" #background
set notification-bg             "$(wq lightbg)" #backgound

set completion-bg               "$(wq light0)" #colour0
set completion-fg               "$(wq light15)" #foreground-dim
set completion-group-bg         "$(wq light0)" #colour0
set completion-group-fg         "$(wq light15)" #foreground-dim
set completion-highlight-bg     "$(wq light8)" #bright black
set completion-highlight-fg     "$(wq light15)" #foreground-dim

set index-bg                    "$(wq lightbg)" #background
set index-fg                    "$(wq light15)" #foreground-dim
set index-active-bg             "$(wq light8)" #colour8
set index-active-fg             "$(wq light15)" #foreground-dim

set inputbar-bg                 "$(wq light0)" #background
set statusbar-bg                "$(wq light0)" #background
set statusbar-fg                "$(wq light15)" #foreground-dim

set default-bg                  "$(wq lightbg)" #background
set default-fg                  "$(wq lightfg)" #foreground
set render-loading-bg           "$(wq lightbg)" #background
set render-loading-fg           "$(wq lightfg)" #foreground

set recolor-lightcolor          "$(wq lightbg)" #background
set recolor-darkcolor           "$(wq lightfg)" #foreground


# light theme binding (press 1)
map '1' feedkeys ":set statusbar-bg '$(wq light0)'<Return>3"
map '3' feedkeys ":set statusbar-fg '$(wq light8)'<Return>4"
map '4' feedkeys ":set default-bg '$(wq lightbg)'<Return>5"
map '5' feedkeys ":set default-fg '$(wq light8)'<Return>6"
map '6' feedkeys ":set render-loading-bg '$(wq lightbg)'<Return>7"
map '7' feedkeys ":set render-loading-fg '$(wq light8)'<Return>8"
map '8' feedkeys ":set recolor-lightcolor '$(wq lightbg)'<Return>9"
map '9' feedkeys ":set recolor-darkcolor '$(wq light8)'<Return>"

# dark theme binding (press 2)
map '2' feedkeys ":set statusbar-bg '$(wq light0)'<Return>0"
map '0' feedkeys ":set statusbar-fg '$(wq light15)'<Return>w"
map 'w' feedkeys ":set default-bg '$(wq lightbg)'<Return>f"
map 'f' feedkeys ":set default-fg '$(wq lightfg)'<Return>p"
map 'p' feedkeys ":set render-loading-bg '$(wq lightbg)'<Return>b"
map 'b' feedkeys ":set render-loading-fg '$(wq lightfg)'<Return>u"
map 'u' feedkeys ":set recolor-lightcolor '$(wq lightbg)'<Return>y"
map 'y' feedkeys ":set recolor-darkcolor '$(wq lightfg)'<Return>"



# vim:ft=sh
