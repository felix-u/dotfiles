{
    "layer": "top",
    "modules-left": ["sway/workspaces", "sway/mode", "cpu"],
    "modules-center": ["custom/clock"],
    "modules-right": ["pulseaudio", "network"],

    "sway/window": {
        "max-length": 50
    },

    "cpu": {
        "interval": 2,
        "format": "   {usage}%",
        "max-length": 10,
        "states": {
            "warning": 50,
            "critical": 75
        }
    },

    "battery": {
        "format": "{icon}  {capacity}%",
        "format-charging": "  {capacity}%",
        "format-icons": ["",
            "", "", "", "", "",
            "", "", "", "", ""],
        "states": {
            "warning": 35,
            "critical": 15
        },
    },

    "network": {
        "interface": "wlp3s0",
        "format": "直",
        "format-disconnected": "睊",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
    },

    "custom/clock": {
        "exec": "~/.config/waybar/scripts/date",
        "restart-interval": 5,
        "tooltip": false
    },

    "pulseaudio": {
        "format": "{icon}   {volume}%",
        "format-icons": {
            "headphone": [" ", " ", " ", " "],
            "default":   ["", "", "", ""],
            "bluetooth": [" ", " ", " ", " "],
        },
        "format-muted": "   {volume}%"
    },
}
