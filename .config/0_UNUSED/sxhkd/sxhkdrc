# custom application shortcuts

# firefox
super + b
    firefox

# rofi
super + d
    rofi -show drun

# emacs
super + y
    emacsclient -a '' -c

# reload SXHKD
super + alt + s
    notify-send "SXHKD reloaded"
    pkill -USR1 -x sxhkd
# ranger
# keyboard-specific

# file manager
super + a
    thunar

# zathura
super + z
    zathura

# random wallpaper
super + shift + b
    exec ~/.config/bspwm/scripts/randwall.sh ~/dotfiles/Pictures/cafe-walls

# volume and brightness control
XF86Audio{Raise,Lower}Volume
    pulsemixer --change-volume {+,-}10
    exec ~/dotfiles/scripts/volNotif.sh
    # dunstify "Volume: " -h int:value:$(pulsemixer --get-volume | cut -d " " -f1)
XF86AudioMute
    pulsemixer --toggle-mute
XF86MonBrightness{Up,Down}
    brightnessctl set {+5%,5%-}

#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# emoji
# keyboard-specific

# lock
super + x
    exec ~/dotfiles/misc/lock.sh

# lock and suspend
# not yet implemented

# screenshot
super + shift + s
    maim -s -u | xclip -selection clipboard -t image/png -i && notify-send 'Screenshot saved to clipboard'

super + ctrl + s
    maim -u | xclip -selection clipboard -t image/png -i && notify-send 'Fullscreen screenshot saved to clipboard'

super + ctrl + shift + s
    maim -u ~/Pictures/screenshots/$(date +%Y-%m-%d-%H%M).png && notify-send 'Fullscreen screenshot saved to ~/Pictures/screenshots'

super + shift + a
    maim -s -u ~/Pictures/screenshots/$(date +%Y-%m-%d-%H%M).png && notify-send 'Screenshot saved to ~/Pictures/screenshots'

super + ctrl + a
    flameshot gui

# dunst
ctrl + space
    dunstctl close
ctrl + shift + space
    dunstctl close-all
ctrl + grave
    dunstctl history-pop

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
# keyboard-specific

# change gaps on the fly
super + {_, shift +} g
    { bspc config -d focused window_gap $(( $(bspc config -d focused window_gap) + 16 )), \
    [ $(bspc config -d focused window_gap) -ge 16 ] && \
    bspc config -d focused window_gap $(( $(bspc config -d focused window_gap) - 16 ))
super + alt + g
    exec ~/.config/bspwm/scripts/gapresize reset

# send the newest marked node to the newest preselected node
# keyboard-specific

# swap the current node and the biggest window
# keyboard-specific

# rotate desktop
super + q
    bspc node -R 90
super + shift + q
    bspc node -R -90


#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
# keyboard-specific

# hide node
# keyboard-specific

# unhide node
# keyboard-specific

#
# focus/swap
# keyboard-specific

# focus the node in the given direction
# keyboard-specific

# focus the node for the given path jump
super + {bracketleft,bracketright,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
# not implemented | super + bracket{left,right}
#	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {Tab,Escape}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
# not implemented | keyboard specific

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# send to and focus on the given desktop
alt + shift + {1-9,0}
    id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}

#
# preselect
#

# preselect the direction
# keyboard-specific

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
# keyboard-specific

# contract a window by moving one of its side inward
# keyboard-specific

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-40 0,0 40,0 -40,40 0}
