# general settings
auto-reload yes
max-items 100
text-width 50
reload-threads 25 # consoom faster
article-sort-order date-asc
confirm-mark-feed-read no

# external browser
browser "/usr/bin/env w3m %u"
macro m set browser "/usr/bin/env mpv --ytdl-format=\"bestvideo[height<=?1200]+bestaudio/best\" --ytdl-raw-options=sub-lang=\"en\",write-sub=,write-auto-sub= --sid=1 --speed=2 %u" ; open-in-browser ; set browser "/usr/bin/env w3m %u"
macro l set browser "/usr/bin/env qutebrowser %u" ; open-in-browser ; set browser "/usr/bin/env w3m %u"
macro b set browser "/usr/bin/env firefox %u" ; open-in-browser ; set browser "/usr/bin/env w3m %u"
macro y set browser "/usr/bin/env wl-copy %u" ; open-in-browser ; set browser "/usr/bin/env w3m %u"

# vim style
unbind-key g
bind-key g home
unbind-key G
bind-key G end
bind-key LEFT quit
bind-key RIGHT open
bind-key i sort
bind-key I rev-sort

# work better with solarised
color background         default   default
color listnormal         color7    default
color listnormal_unread  default   default
color listfocus          black     green
color listfocus_unread   black     green
color info               default   black
color article            default   default

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default

# highlight section separators
# highlight feedlist "---.*---" blue default bold
highlight feedlist "⋅⋅⋅.*⋅⋅⋅" blue default bold
highlight feedlist "-.*-" magenta default bold
highlight feedlist ".*0/0.." default default invis
