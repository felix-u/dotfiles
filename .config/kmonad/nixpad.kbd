(deflayer default
  caps  f1  f2  f3  f4  f5  f6 f7  f8  f9  f10  f11  f12 @vnla @col @semi del
  grv  1    2    3    4    5    6    7    8    9    0    -    =     bspc
  tab  q    w    e    r    t    y    u    i    o    p     [   ]    \
  esc  a    s    d    f    g    h    j    k    l    ;     '      ret
  lsft z    x   c    v     b    n    m    ,    .    /          rsft        pgup  up  ralt
  lalt     lctl lmet         spc          @nav  ralt rctl                  left down rght
)


